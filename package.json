{
  "name": "violet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run migrate:dev && run-p dev:*",
    "dev:client": "next dev -p 3000",
    "dev:server": "pnpm run dev --prefix server",
    "dev:aspida": "aspida --watch",
    "dev:pathpida": "pathpida --enableStatic --watch",
    "build": "run-p build:client build:server",
    "build:client": "pathpida --enableStatic && aspida && prisma generate --schema server/prisma/schema.prisma && next build && next export",
    "build:server": "pnpm run build --prefix server",
    "build:types": "pathpida --enableStatic && aspida && pnpm run build:frourio --prefix server",
    "lint": "pnpm run lint:js && pnpm run lint:prettier && pnpm run lint:style",
    "lint:js": "eslint --ext .ts,.tsx,.js .",
    "lint:prettier": "prettier --check \"./**/*.{ts,tsx,js}\" --ignore-path .eslintignore",
    "lint:style": "stylelint '**/*.ts{,x}' -s css-in-js",
    "lint:fix": "pnpm run lint:js -- --fix && prettier --write \"./**/*.{ts,tsx,js}\" --ignore-path .eslintignore &&  pnpm run lint:style -- --fix",
    "migrate:dev": "pnpm run migrate:dev --prefix server",
    "migrate:reset": "pnpm run migrate:reset --prefix server",
    "start": "run-p start:*",
    "start:client": "next start",
    "start:server": "npm start --prefix server",
    "test": "pnpm run build:types && jest",
    "typecheck": "pnpm run build:types && tsc --noEmit && tsc --noEmit -p server",
    "login:firebase": "firebase login:ci"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.5",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.13",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-jest": "^27.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.0",
    "fastify": "^3.20.2",
    "fastify-cors": "^6.0.2",
    "firebase-tools": "^9.16.6",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.1.0",
    "jest-fetch-mock": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.17.0",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.5.0",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
