{
  "name": "violet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate": "pnpm run --filter=./pkg _:generate",
    "dev": "pnpm run generate && pnpm run --parallel --filter=./pkg _:dev",
    "lint": "pnpm run generate && pnpm run lint:js && pnpm run lint:prettier && pnpm run lint:style",
    "lint:js": "eslint --ext .ts,.tsx,.js .",
    "lint:prettier": "prettier --check \"./**/*.{ts,tsx,js}\" --ignore-path .eslintignore",
    "lint:style": "stylelint '**/*.ts{,x}' -s css-in-js",
    "lint:fix": "pnpm run lint:js -- --fix && prettier --write \"./**/*.{ts,tsx,js}\" --ignore-path .eslintignore &&  pnpm run lint:style -- --fix",
    "build": "pnpm run generate && pnpm run --filter=./pkg --filter=!./pkg/lambda _:build",
    "build-all": "pnpm run generate && pnpm run --filter=./pkg _:build",
    "start": "pnpm run --parallel --filter=./pkg start",
    "test": "pnpm run generate && pnpm run --filter=./pkg _:test",
    "typecheck": "pnpm run generate && pnpm run --filter=./pkg _:typecheck"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "pluginSearchDirs": [
      "."
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^12.0.0",
    "@types/busboy": "^0.2.4",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.5",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.13",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@violet/api": "workspace:*",
    "@violet/def": "workspace:*",
    "@violet/lambda-conv2img": "workspace:*",
    "@violet/web": "workspace:*",
    "babel-jest": "^27.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.0",
    "fastify": "^3.20.2",
    "fastify-cors": "^6.0.2",
    "frourio": "^0.25.1",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.1.0",
    "jest-fetch-mock": "^3.0.3",
    "node-dev": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.17.0",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.5.0",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": ">=14",
    "npm": "forbidden, use npm",
    "pnpm": ">=6",
    "yarn": "forbidden, use npm"
  }
}
